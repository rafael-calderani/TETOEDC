<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#2e6faa"
                android:endColor="#20476c"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#1b4771" />
            <corners
                android:radius="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#357ec1"
                android:endColor="#26547f"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#2f6699" />
            <corners
                android:radius="10dp" />
        </shape>
    </item>
</selector>