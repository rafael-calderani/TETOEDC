<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#2eaa32"
                android:endColor="#206c20"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#33992f" />
            <corners
                android:radius="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#35c137"
                android:endColor="#297f26"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#33992f" />
            <corners
                android:radius="10dp" />
        </shape>
    </item>
</selector>