<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/LinearLayoutDefault"
    tools:context="br.com.calderani.rafael.tetoedc.SplashActivity">

    <ImageView
        android:id="@+id/ivSplash"
        android:layout_width="match_parent"
        android:layout_height="@dimen/logo_height"
        android:padding="@dimen/default_padding"
        android:src="@drawable/splash" />

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/LinearLayoutInternal"
        android:orientation="vertical"
        android:padding="@dimen/default_padding"
        android:layout_height="350dp">
        <ImageView
            android:id="@+id/ivPhoto1"
            android:layout_width="@dimen/splashPhotoSize1"
            android:layout_height="@dimen/splashPhotoSize2"
            android:layout_gravity="left"
            android:scaleType="centerCrop"
            android:src="@drawable/splash_photo1"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/ivPhoto2"
            android:layout_width="@dimen/splashPhotoSize2"
            android:layout_height="@dimen/splashPhotoSize1"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="70dp"
            android:scaleType="centerCrop"
            android:src="@drawable/splash_photo2"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/ivPhoto3"
            android:layout_width="@dimen/splashPhotoSize2"
            android:layout_height="@dimen/splashPhotoSize1"
            android:layout_gravity="right|bottom"
            android:scaleType="centerCrop"
            android:src="@drawable/splash_photo3"
            android:visibility="invisible" />
    </FrameLayout>
</LinearLayout>
