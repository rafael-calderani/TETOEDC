<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/default_margin"
    android:orientation="vertical"
    tools:context="br.com.calderani.rafael.tetoedc.NavigationActivity"
    tools:showIn="@layout/app_bar_navigation">
        <TextView
            android:id="@+id/tvWelcome"
            style="@style/controls_default"
            android:layout_marginTop="@dimen/custom_margin"
            android:textSize="@dimen/text_size_medium" />

        <Button android:id="@+id/btSchedule"
            android:background="@drawable/button_default"
            style="@style/button_default"
            android:text="@string/schedule"
            android:hint="@string/scheduleHint"/>

        <Button android:id="@+id/btTeam"
            android:background="@drawable/button_default"
            style="@style/button_default"
            android:text="@string/my_team"
            android:hint="@string/my_team_hint"/>

        <Button android:id="@+id/btProjects"
            android:background="@drawable/button_default"
            style="@style/button_default"
            android:text="@string/projects"
            android:hint="@string/projectsHint"/>

        <Button android:id="@+id/btNews"
            android:background="@drawable/button_default"
            style="@style/button_default"
            android:text="@string/news"
            android:hint="@string/newsHint"/>

        <Button android:id="@+id/btCommunities"
            android:background="@drawable/button_default"
            style="@style/button_default"
            android:text="@string/communities"
            android:hint="@string/communities"/>
</LinearLayout>
